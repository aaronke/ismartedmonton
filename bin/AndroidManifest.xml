<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cst.aaron.ismartedmonton"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
   <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cst.aaron.ismartedmonton.MainActivity"
            android:label="@string/app_name"
            > 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cst.aaron.ismartedmonton.LoginActivity"
            android:parentActivityName="com.cst.aaron.ismartedmonton.MainActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cst.aaron.ismartedmonton.MainActivity"/>
        </activity>
        <activity 
            android:name="com.cst.aaron.ismartedmonton.CollisionActivity"
            android:parentActivityName="com.cst.aaron.ismartedmonton.MainActivity"
            android:label="@string/title_activity_collision">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cst.aaron.ismartedmonton.MainActivity"/>
        </activity>
    </application>

</manifest>
