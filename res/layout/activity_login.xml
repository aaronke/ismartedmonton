<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cst.aaron.ismartedmonton.LoginActivity" >

    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/login_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" 
        android:background="@color/page_background">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/login_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Login form -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >

            <LinearLayout 
                android:id="@+id/linear_username"
                style="@style/Login_linear"
                android:padding="6dp">           
                <ImageView 
                    android:layout_width="36dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/user_content"
                    android:src="@drawable/user_icon"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

            </LinearLayout>
           
			 <LinearLayout
			     android:id="@+id/linear_password"
			     style="@style/Login_linear"
			     android:padding="8dp"
			     android:layout_marginTop="15dp" >

			     <ImageView
			         android:layout_width="36dp"
			         android:layout_height="40dp"
			         android:contentDescription="@string/user_content"
			         android:src="@drawable/password_icon" />

			     <EditText
			         android:id="@+id/password"
			         android:layout_width="fill_parent"
			         android:layout_height="40dp"
			         android:background="#00000000"
			         android:ems="10"
			         android:hint="@string/prompt_password"
			         android:imeActionId="@+id/login"
			         android:imeActionLabel="@string/action_sign_in_short"
			         android:imeOptions="actionUnspecified"
			         android:inputType="textPassword"
			         android:maxLines="1"
			         android:singleLine="true" 
			         android:layout_margin="2dp"/>
			 </LinearLayout>
			 
			 <!-- <LinearLayout
			     android:layout_width="fill_parent"
			     android:layout_height="25dp"
			     android:id="@+id/linear_forget"
			     >
			     
			 </LinearLayout> -->
            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:background="@drawable/sign_in_button_background"
                android:text="@string/action_sign_in_register" 
                />
        </LinearLayout>
    </ScrollView>

</merge>
